<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_title_height"
        android:text="@string/setting_title"
        android:textSize="@dimen/general_title_text_size"
        android:textColor="@color/main_view"
        android:gravity="center" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="false"
        android:stretchColumns="false"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/setting_vertical_margin">

        <TableRow android:layout_weight="1">

            <ImageButton
                android:id="@+id/budgetSetting_button"
                style="@style/Dusk"
                android:layout_width="50sp"
                android:layout_height="@dimen/setting_button_height"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/budget" />

            <ImageButton
                android:id="@+id/userSetting_button"
                style="@style/Dusk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_button_height"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/user" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <ImageButton
                style="@style/Dusk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_button_height"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/manual"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/feedback_button"
                style="@style/Dusk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_button_height"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/feedback"
                android:visibility="visible" />

        </TableRow>
    </TableLayout>

</LinearLayout>